@model DemoFE.Models.CustomerRegistration

@{
    ViewData["Title"] = "RegisterCustomer";
}

<head>
    <link rel="stylesheet" href="~/css/LoginSeller.css" />
</head>

<h1><b><font face="Arial" color="#FFFFF" class="font-italic">Enter all the details</font></h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerContact" class="control-label text-light"></label>
                <input asp-for="CustomerContact" class="form-control" />
                <span asp-validation-for="CustomerContact" class="text-danger"></span>
            </div>
            <br />
            




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>