@model DemoFE.Models.LoginData
    @{
        ViewBag.Title = "Login";

    }

<head>
    <link rel="stylesheet" href="~/css/LoginUser.css" />
</head>
        <h2><u><b><font face="Arial" color="#FFFFF" class="font-italic">Login</font></b></u></h2>

        



        <div>
            @using (Html.BeginForm("Login", "Account"))
            {
                <div style="color:red;">@Html.ValidationSummary()</div>
                <div class="row">

                    <div class="col-lg-12">@ViewBag.Message</div>
                </div><br />

                <div class="row">
                    <div class="col-lg-1 text-light">@Html.LabelFor(a => a.Email)</div>
                    <div class="col-lg-3">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
                </div><br />
                <div class="row">
                    <div class="col-lg-1 text-light">@Html.LabelFor(a => a.Upassword)</div>
                    <div class="col-lg-3">@Html.TextBoxFor(a => a.Upassword, new { @class = "form-control", type = "Password" })</div>
                </div><br />
                <input type="submit" value="Login" class="btn btn-dark" />


                <p>
                    @Html.ActionLink("Register as a new user", "RegisterUser")
                </p>
            }

        </div>





